@{
  Layout = "_Layout";
}

<table style="width=100%">
  <tr>
    <th>Venue ID</th>
    <th>Venue Name</th>
    <th>Update Venue</th>
    <th>Delete Venue</th>
  </tr>
  @foreach(var venue in Model)
  {
    <tr>
      <td>@venue.GetVenueId()</td>
      <td><a href="/bands-by-venue/@venue.GetVenueId()">@venue.GetVenueName()</a></td>
      <td><a href="/update-venue/@venue.GetVenueId()">Update this venue</a></td>
      <td><a href="/delete-venue/@venue.GetVenueId()">Delete this venue</a></td>
    </tr>
  }
</table>

<h3>Add new Venue</h3>
<form action="/create-venue" method="post">
  <div class="form-group">
    <label for="venue-name">Enter venue name</label>
    <input id="venue-name" name="venue-name" class="form-control" type="text" required>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
