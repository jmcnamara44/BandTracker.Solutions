@{
  Layout = "_Layout";
}

<table style="width=100%">
  <tr>
    <th>Band ID</th>
    <th>Band Name</th>
    <th>Update Band</th>
    <th>Delete Band</th>
  </tr>
  @foreach(var band in Model)
  {
    <tr>
      <td>@band.GetBandId()</td>
      <td><a href="/venues-by-band/@band.GetBandId()">@band.GetBandName()</a></td>
      <td><a href="/update-band/@band.GetBandId()">Update this band</a></td>
      <td><a href="/delete-band/@band.GetBandId()">Delete this band</a></td>
    </tr>
  }
</table>

<h3>Add new Band</h3>
<form action="/create-band" method="post">
  <div class="form-group">
    <label for="band-name">Enter band name</label>
    <input id="band-name" name="band-name" class="form-control" type="text" required>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
